<%- include('partials/header') -%>

<h1>Compose</h1>
<form method = "post" action = "/compose">
  <div class="form-group">
    <label for="title">Title</label>
    <input id = "title"  class="form-control" type="text" name="postTitle" value="<%= postTitle%>">
  </div>
  <div class="form-group">
    <label for="post">Content</label>
    <textarea id = "post"  class="form-control" type="text" name="postBody" rows="8" cols="80"><%= postContent%></textarea>
  </div>
    <button type="submit" class="btn btn-primary" name="publish" value = "<%= postId %>">Publish</button>
</form>
<%- include('partials/footer') -%>
